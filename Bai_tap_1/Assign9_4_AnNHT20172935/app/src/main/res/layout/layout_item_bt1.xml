<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:gravity="center"
        android:background="@drawable/img_circle"
        android:id="@+id/img_circle1"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/txt_fullname"
        android:textSize="28sp"
        android:layout_toRightOf="@id/img_circle1"
        android:layout_toLeftOf="@id/img_star"
        android:layout_marginLeft="10dp"
        android:text="Full Name"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_below="@id/txt_fullname"
        android:textSize="16sp"
        android:layout_toRightOf="@id/img_circle1"
        android:layout_toLeftOf="@id/img_star"
        android:layout_marginLeft="10dp"
        android:text="Content"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/img_star"
        android:src="@drawable/ic_star_border_gray_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>